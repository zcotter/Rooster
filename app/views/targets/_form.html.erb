<%= form_for(@target) do |f| %>
    <% if @target.errors.any? %>
        <div class="well" id="error_explanation">
          <h2><%= pluralize(@target.errors.count, "error") %> prohibited this target from being saved:</h2>

          <ul>
            <% @target.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">
      <%= f.label :host %>
      <%= f.text_field :host %>

    </div>
    <br/>
    <div class="field">
      <%= f.label :path %>
      <%= f.text_field :path %>

    </div>
    <br/>
    <div class="field">
      <%= f.label :interval %>
      <%= f.number_field :interval, :min => 15, :value => 15, :step => 15 %>

    </div>
    <br/>
    <div class="actions">
      <%= f.submit :class => "btn btn-large btn-danger" %>
    </div>
<% end %>
