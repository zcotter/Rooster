<!DOCTYPE html>
<html>
<head>
  <title>Rooster</title>
  <%= stylesheet_link_tag "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
<div class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>

      <div class="nav-collapse">
        <ul class="nav">
          <li><%= link_to "Rooster", about_path, :class => 'brand' %></li>

          <% if user_signed_in? %>
              <li>
                <p class="navbar-text" style="font-size: 100%;">
                  Logged in as <strong><%= current_user.email %></strong>.
                </p>
              </li>
              <li><a href="<%= targets_path %>">
                <i class="icon-home icon-white"></i> My Targets
              </a></li>
              <li><a href="<%= edit_user_registration_path %>">
                <i class="icon-cog icon-white"></i> Edit Profile
              </a></li>
              <li><a href="<%= destroy_user_session_path %>" data-method="delete" rel="nofollow">
                <i class="icon-circle-arrow-left icon-white"></i> Logout
              </a></li>
          <% else %>
              <li>
                <p class="navbar-text">
                  You are not logged in.
                </p>
              </li>
              <li><%= link_to "Sign up", new_user_registration_path %></li>
              <li><%= link_to "Login", new_user_session_path %></li>
          <% end %>
          <li><%= link_to "What is Rooster?", about_path %></li>
        </ul>
      </div>
    </div>
  </div>
</div>
<div class="container-fluid">
  <% flash.each do |name, msg| %>
      <div id="<%= "flash_#{name}" %>" class="alert alert-success">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= msg %>
      </div>
  <% end %>

  <%= yield %>
</div>
<div class="footer">
  <br/>

  <p class="text-center" style="border-top-style: solid;">
    <br/>

  <div class="row-fluid">
    <div class="span3"></div>
    <%= link_to "About", about_path, :class => "span2 text-left" %>
    <%= link_to "Contact", contact_path, :class => "span2 text-center" %>
    <%= link_to "License", license_path, :class => "span2 text-right" %>
    <div class="span3"></div>
  </div>
  <div class="text-center">
    Rooster, by <%= link_to "Zach Cotter", "http://www.zachcotter.com" %>, is licensed under
    the <%= link_to "Creative Commons Attribution 3.0 Unported License", license_path %>
  </div>
  </p>
  <br/>
  <br/>
  <br/>
</div>
<!-- Piwik -->
<script type="text/javascript">
    var _paq = _paq || [];
    _paq.push(["setDocumentTitle", document.domain + "/" + document.title]);
    _paq.push(["setCookieDomain", "*.roosterapp.herokuapp.com"]);
    _paq.push(["setDomains", ["*.roosterapp.herokuapp.com", "*.rooster.zachcotter.com"]]);
    _paq.push(["trackPageView"]);
    _paq.push(["enableLinkTracking"]);

    (function () {
        var u = (("https:" == document.location.protocol) ? "https" : "http") + "://www.zachcotter.com/piwik/";
        _paq.push(["setTrackerUrl", u + "piwik.php"]);
        _paq.push(["setSiteId", "2"]);
        var d = document, g = d.createElement("script"), s = d.getElementsByTagName("script")[0];
        g.type = "text/javascript";
        g.defer = true;
        g.async = true;
        g.src = u + "piwik.js";
        s.parentNode.insertBefore(g, s);
    })();
</script>
<!-- Piwik Image Tracker -->
<noscript>
  <img src="http://www.zachcotter.com/piwik/piwik.php?idsite=2&amp;rec=1" style="border:0" alt=""/>
</noscript>
<!-- End Piwik -->
<!-- End Piwik Code -->
</body>
</html>
